---
const { number, name } = Astro.props;
---

<li>
  <div>
    <img src={`/images/s${number.replaceAll(".", "-")}.png`} loading="lazy" />
  </div>

  <p>
    <a href={`/signs/${number.replaceAll(".", "-")}`}>{number}<br />{name}</a>
  </p>
</li>

<style>
  li {
    display: flex;
    flex-direction: column;
    border-radius: 1rem;
    position: relative;
    overflow: hidden;
    box-shadow: rgba(0, 0, 0, 0.16) 0px 3px 6px, rgba(0, 0, 0, 0.23) 0px 3px 6px;
  }

  li > div {
    display: flex;
    align-items: center;
    height: 125px;
    padding: 0.5rem;
  }

  li > div > img {
    width: 100%;
    max-height: 100%;
    object-fit: contain;
  }

  li > p {
    word-wrap: break-word;
    text-align: center;
    margin: 0;
    background-color: #EEEEEE;
    flex-grow: 1;
    padding: 0.5rem;
    line-height: 1.5rem;
  }

  li > p > a {
    color: inherit;
    text-decoration: none;
  }

  li > p > a::after {
    content: "";
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
  }
</style>
